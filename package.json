{
  "name": "patitas",
  "version": "1.0.0",
  "private": true,
  "description": "üêæ Patitas ‚Äì Plataforma moderna para conectar animales con adoptantes responsables.",
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "packageManager": "npm@10.9.2",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:api": "turbo run build --filter=api",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "db:generate": "turbo run db:generate --filter=web",
    "db:push": "turbo run db:push --filter=web",
    "db:migrate": "turbo run db:migrate --filter=web",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist .turbo"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "typescript": "^5.3.3",
    "drizzle-orm": "^0.44.7",
    "tsx": "^4.21.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/francogalfre/patitas.git"
  },
  "keywords": [
    "adoption",
    "animals",
    "pets",
    "nextjs",
    "express",
    "fullstack"
  ],
  "author": "Franco Galfre",
  "license": "MIT",
  "homepage": "https://github.com/francogalfre/patitas#readme"
}
